 <div class="column">
	<section id="Seasons">
		<h3>Seasons</h3>
		<ol id="seasonList">
		<% @seasons.each do |s| %>
			<li>
				<a class="<%= SEASONLINKCLASS %>" href="javascript:clickedSeason('<%= s.seasonID %>', 'Regular')"><%= s.seasonID[0,4] %> - <%= s.seasonID[-4,4] %></a>
			</li>
			<li>
				<a class="<%= SEASONLINKCLASS %>" href="javascript:clickedSeason('<%= s.seasonID %>', 'Playoffs')"><%= s.seasonID[0,4] %> - <%= s.seasonID[-4,4] %> Playoffs</a>
			</li>
		<% end %> 
		</ol>
	</section>
	<section id="Teams">
		<h3>Teams</h3>
		<ol id="teamList">
		<% @teams.each do |t| %>
			<li>
				<a class="<%= TEAMLINKCLASS %>" href="javascript:clickedTeam('<%= t.teamID %>')"><%= t.name %></a>
			</li>
		<% end %> 
		</ol>
	</section>
</div>	
<div class="column">
	<section id="Games">
		<div class="loadMask"><div class="activityIndicator"></div></div>
		<h3>
			<a href="javascript:clickedGameSort('ASC')" class="sort">Sort<div class="glyph-down"></div></a>
			Games
		</h3>
		<ol id="gameList"></ol>
	</section>
</div>
<div class="column">	
	<section id="SeasonLinks">
		<div class="loadMask"><div class="activityIndicator"></div></div>
		<h3>
			<span id="seasonNumber"></span>
			Season Links
		</h3>
		<ul id="seasonLinkList"></ul>
	</section>
	<section id="GameLinks">
		<div class="loadMask"><div class="activityIndicator"></div></div>
		<h3>
			<span id="gameNumber"></span>
			Game Links
		</h3>
		<ul id="gameLinkList"></ul>	
	</section>
</div>
